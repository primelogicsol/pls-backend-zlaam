{
  "name": "primelogicsolutionbackendserver",
  "version": "1.0.0",
  "description": "A freenlance plate form for freelancer just like fiverr",
  "main": "/src/server.ts",
  "author": "zlaam",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . && bun run type-check",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "fmt": "prettier --write .",
    "copy": "copyfiles -u 1 ./src/templates/**/* ./dist/src/",
    "prebuild": "rimraf -rf ./dist  && bun run lint && bun run fmt",
    "build": "bun run tsc --build  && bun run copy",
    "dev": "bun run build  && nodemon  ./src/server.ts",
    "start": "bun run build && node --env-file .env ./dist/src/server.js",
    "commit-lint": "commitlint  --edit",
    "precommit": "bun run lint && bun run fmt && git add .",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma deploy",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "test": "node",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@types/node": "^22.8.0",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "colorette": "^2.0.20",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "dotenv-flow": "^4.1.0",
    "error-stack-parser": "^2.1.4",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "rate-limiter-flexible": "^5.0.4",
    "rimraf": "^6.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.13.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.16",
    "@types/supertest": "^6.0.2",
    "add": "^2.0.6",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prisma": "^6.1.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  }
}
